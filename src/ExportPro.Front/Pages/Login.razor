@page "/login"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Nav

<div class="login-wrapper">
    <div class="login-page">
        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <img src="Exadel_logo_new.png" alt="Exadel Logo" class="login-logo" />

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <InputText @bind-Value="loginModel.Email" id="email" class="form-control" />
                <ValidationMessage For="@(() => loginModel.Email)" />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <InputText @bind-Value="loginModel.Password" id="password" type="password" class="form-control" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <button type="submit" class="btn btn-dark w-100">Log In</button>
            <button type="button" class="btn btn-dark w-100" @onclick="NavigateToRegister">Register</button>
        </EditForm>
    </div>
</div>

@code {
    private ExportPro.Front.Models.LoginModel loginModel = new();

    private async Task HandleLogin()
    {
        // TODO: Call API
    }

    private void NavigateToRegister() => Nav.NavigateTo("/register");
}
